generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum MembershipStatus {
  active
  expired
  trial
  canceled
}

enum PredictionTier {
  free
  premium
}

model User {
  id              String    @id @default(uuid()) @db.Uuid
  whopCustomerId String?   @unique @map("whop_customer_id") @db.Text
  email           String?   @unique @db.Text
  name            String?   @db.Text
  avatarUrl       String?   @map("avatar_url") @db.Text
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  
  memberships     Membership[]
  sessions        UserSession[]
  
  @@map("users")
}

model Membership {
  id              String          @id @default(uuid()) @db.Uuid
  userId          String          @map("user_id") @db.Uuid
  whopPlanId      String?         @map("whop_plan_id") @db.Text
  status          MembershipStatus
  accessExpiresAt DateTime?       @map("access_expires_at") @db.Timestamptz(6)
  updatedAt       DateTime        @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId])
  @@map("memberships")
}

model Prediction {
  id                String        @id @default(uuid()) @db.Uuid
  eventId           String?       @map("event_id") @db.Text
  league            String?       @db.Text
  match             String?       @db.Text
  kickoff           DateTime?     @db.Timestamptz(6)
  oddsHome          Decimal?      @map("odds_home") @db.Decimal
  oddsDraw          Decimal?      @map("odds_draw") @db.Decimal
  oddsAway          Decimal?      @map("odds_away") @db.Decimal
  aiWinProbability  Decimal?      @map("ai_win_probability") @db.Decimal
  aiConfidence      Decimal?      @map("ai_confidence") @db.Decimal
  tier              PredictionTier @default(free)
  createdAt         DateTime      @default(now()) @map("created_at") @db.Timestamptz(6)
  
  @@map("predictions")
}

model UserSession {
  token     String   @id @db.Text
  userId    String   @map("user_id") @db.Uuid
  expiresAt DateTime? @map("expires_at") @db.Timestamptz(6)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([expiresAt])
  @@map("user_sessions")
}
